<footer class="footer">
  {% include "./_subscribe.njk" %}
  <div class="footer__wrapper">
    <div class="container">
      <div class="footer__content">
        <div class="footer__logo">
          <a href="#" class="logo">
            {{mixins.icon('logo')}}
            <span>{{ meta.siteNameMark | safe}}</span>
          </a>
        </div>
        <div class="footer__about text text_m">
          {{ meta.siteDescriptionMark | safe}}
        </div>
        <div class="footer__socials">
          {% include "./_socials.njk" %}
        </div>
        <div class="footer__copy">
          {{ meta.siteCopy | safe }}
        </div>
        <div class="footer__nav">
          <nav class="footer-nav" aria-label="Site navigation">
            <ul class="menu">
              {% for item in data.footerNav %}
              <li class="menu__item">
                <a class="menu__link" href="{{ item.url }}">
                  {{ item.label }}
                </a>
                {% if item.siteMapSub %}
                <ul class="submenu">
                  {% for item in item.siteMapSub %}
                  <li class="submenu__item">
                    <a class="submenu__link" href="{{ item.url }}">
                      {{ item.label }}
                    </a>
                  </li>
                  {% endfor %}
                </ul>
                {% endif %}
              </li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</footer>
